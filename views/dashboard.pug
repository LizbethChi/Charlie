extends ./layout/index.pug


block mainContent
  h3(class="text-2xl font-semibold text-white mb-6") Estado Actual

  // Tarjetas resumen
  div(class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8")
    div(class="bg-blue-500/10 p-4 rounded-xl border border-blue-400/20")
      h4(class="text-sm text-gray-400") Operadores activos
      p(class="text-3xl font-bold text-blue-400 mt-1") 14

    div(class="bg-green-500/10 p-4 rounded-xl border border-green-400/20")
      h4(class="text-sm text-gray-400") Máquinas en uso
      p(class="text-3xl font-bold text-green-400 mt-1") 8

    div(class="bg-red-500/10 p-4 rounded-xl border border-red-400/20")
      h4(class="text-sm text-gray-400") Alertas registradas
      p(class="text-3xl font-bold text-red-400 mt-1") 3

  // Gráfica
  div(class="mt-8")
    h4(class="text-lg font-semibold text-gray-300 mb-2") Actividad en tiempo real
    canvas(id="chartRealtime" width="400" height="180")

  // Tabla
  div(class="mt-8")
    h4(class="text-lg font-semibold text-gray-300 mb-2") Últimos eventos
    table(class="min-w-full border border-gray-700 rounded-lg overflow-hidden shadow-sm text-gray-300")
      thead(class="bg-gray-800 text-gray-400")
        tr
          th(class="py-2 px-4 text-left") Operador
          th(class="py-2 px-4 text-left") Estado
          th(class="py-2 px-4 text-left") Máquina
          th(class="py-2 px-4 text-left") Hora
      tbody
        tr(class="border-b border-gray-700 hover:bg-gray-800")
          td(class="py-2 px-4") Carlos Ruiz
          td(class="py-2 px-4 text-green-400 font-semibold") Enfocado
          td(class="py-2 px-4") Excavadora #12
          td(class="py-2 px-4") 10:25 a.m.
        tr(class="border-b border-gray-700 hover:bg-gray-800")
          td(class="py-2 px-4") Ana López
          td(class="py-2 px-4 text-red-400 font-semibold") D
