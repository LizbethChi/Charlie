extends ./layout/index.pug

block mainContent
  // ===========================
  // ENCABEZADO
  // ===========================
  header(class="mb-8 flex flex-wrap justify-between items-center gap-4")
    h1(class="text-2xl font-bold text-white") Operadores
    div(class="flex gap-3")
      button(class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg transition-all") Agregar operador
      button(class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-all") Exportar CSV

  // ===========================
  // FILTROS
  // ===========================
  section(class="bg-gray-900/40 border border-gray-700 p-6 rounded-2xl shadow-md mb-8")
    h2(class="text-lg font-semibold text-gray-200 mb-4") Filtros de búsqueda

    form(class="grid grid-cols-1 md:grid-cols-3 gap-4")
      div
        label(class="text-gray-400 text-sm") Nombre
        input(type="text" class="w-full mt-1 p-2 rounded-lg bg-gray-800 text-gray-200 border border-gray-700" placeholder="Buscar por nombre")
      div
        label(class="text-gray-400 text-sm") Rol
        select(class="w-full mt-1 p-2 rounded-lg bg-gray-800 text-gray-200 border border-gray-700")
          option(value="all") Todos
          option(value="supervisor") Supervisor
          option(value="operador") Operador
      div
        label(class="text-gray-400 text-sm") Estado
        select(class="w-full mt-1 p-2 rounded-lg bg-gray-800 text-gray-200 border border-gray-700")
          option(value="all") Todos
          option(value="activo") Activo
          option(value="inactivo") Inactivo

    button(class="mt-4 bg-primary hover:bg-blue-400 text-white px-4 py-2 rounded-lg transition-all") Buscar

  // ===========================
  // TABLA DE OPERADORES
  // ===========================
  section(class="bg-card-dark p-6 rounded-2xl shadow-md")
    h2(class="text-xl font-bold mb-4") Lista de operadores

    table(class="w-full text-sm text-gray-300")
      thead(class="text-gray-400 border-b border-gray-700")
        tr
          th(class="text-left py-2") Nombre
          th(class="text-left py-2") Rol
          th(class="text-left py-2") Estado
          th(class="text-left py-2") Última conexión
          th(class="text-left py-2") Acción
      tbody#tablaOperadores
        // JS insertará las filas dinámicamente

  // ===========================
  // SCRIPTS
  // ===========================
  script(src="/js/operadores.js")
