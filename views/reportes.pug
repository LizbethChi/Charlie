extends ./layout/index.pug

block mainContent
  header(class="mb-6 flex justify-between items-center")
    h1(class="text-2xl font-bold text-white") Reportes del sistema
    button(class="bg-primary hover:bg-blue-400 text-white px-4 py-2 rounded-lg transition-all") Descargar reporte

  section(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6")
    div(class="bg-card-dark p-4 rounded-2xl shadow-md")
      h2(class="text-lg font-semibold mb-2") Total de operadores
      p(class="text-3xl font-bold text-primary") 12
    div(class="bg-card-dark p-4 rounded-2xl shadow-md")
      h2(class="text-lg font-semibold mb-2") Alertas registradas
      p(class="text-3xl font-bold text-red-400") 5
    div(class="bg-card-dark p-4 rounded-2xl shadow-md")
      h2(class="text-lg font-semibold mb-2") Promedio de atención
      p(class="text-3xl font-bold text-green-400") 93%

  section(class="bg-card-dark p-6 rounded-2xl shadow-md")
    h2(class="text-xl font-bold mb-4") Historial de reportes
    table(class="w-full text-sm text-gray-300")
      thead(class="text-gray-400 border-b border-gray-700")
        tr
          th(class="text-left py-2") Fecha
          th(class="text-left py-2") Operador
          th(class="text-left py-2") Estado
          th(class="text-left py-2") Acción
      tbody
        tr(class="hover:bg-gray-800 transition-all")
          td(class="py-2") 13/11/2025
          td Carlos M.
          td(class="text-green-400") Enfocado
          td Ver detalles
        tr(class="hover:bg-gray-800 transition-all")
          td(class="py-2") 12/11/2025
          td José L.
          td(class="text-red-400") Distraído
          td Ver detalles
        tr(class="hover:bg-gray-800 transition-all")
          td(class="py-2") 12/11/2025
          td Ana R.
          td(class="text-yellow-400") Inactivo
          td Ver detalles
